                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Tanggal Lahir "
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@color/black"/>

            <!-- Kolom 2 -->
            <TextView
                android:id="@+id/vTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
